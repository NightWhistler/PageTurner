<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.revive"
      android:versionCode="1"
      android:versionName="0.2.13_1"
      android:installLocation="auto">
    
    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <application android:label="@string/app_name" 
        android:icon="@drawable/page_turner"
        android:description="@string/app_desc"        
        android:name="net.nightwhistler.pageturner.PageTurner"
        >

        <activity android:name="net.nightwhistler.pageturner.activity.ReadingActivity"
                  android:label="@string/app_name"> 
                  
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
    			<category android:name="android.intent.category.DEFAULT" />
    			<category android:name="android.intent.category.BROWSABLE" />    			
    			
    			<data android:scheme="http" android:host="*"
                    android:pathPattern=".*\\.epub"
                    android:mimeType="application/epub+zip" />
                <data android:scheme="https" android:host="*"
                    android:pathPattern=".*\\.epub" 
                    android:mimeType="application/epub+zip"/>
                <data android:scheme="content" android:host="*"
                    android:pathPattern=".*\\.epub"
                    android:mimeType="application/epub+zip" />
                <data android:scheme="file" android:host="*"
                    android:pathPattern=".*\\.epub"
                    android:mimeType="application/epub+zip" />

            </intent-filter>
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
 
        </activity>
        
        <activity android:name="net.nightwhistler.pageturner.activity.PageTurnerPrefsActivity"
                  android:label="@string/prefs" /> 
                  
               
        <activity android:name="net.nightwhistler.pageturner.activity.LibraryActivity"
                  android:label="@string/library"
                android:theme="@android:style/Theme.NoTitleBar"/>
          
        <activity android:name="net.nightwhistler.pageturner.activity.BookDetailsActivity"
                  android:label="@string/book_details" />
        <activity android:name=".bookshop"
                  android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".review"
                  android:theme="@android:style/Theme.NoTitleBar"/>

    </application>
</manifest> 
